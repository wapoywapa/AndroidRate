<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rate_dialog_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="ifContentScrolls"
    android:paddingLeft="@dimen/rate_dialog_zero_dp"
    android:paddingTop="@dimen/rate_dialog_zero_dp"
    android:paddingBottom="@dimen/rate_dialog_zero_dp"
    android:paddingRight="@dimen/rate_dialog_zero_dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/rate_dialog_zero_dp"
        android:layout_marginLeft="@dimen/rate_dialog_zero_dp"
        android:layout_marginTop="@dimen/rate_dialog_zero_dp"
        android:layout_marginBottom="@dimen/rate_dialog_zero_dp"
        android:layout_marginRight="@dimen/rate_dialog_zero_dp"
        android:layout_marginEnd="@dimen/rate_dialog_zero_dp"
        android:paddingLeft="@dimen/rate_dialog_zero_dp"
        android:paddingTop="@dimen/rate_dialog_zero_dp"
        android:paddingBottom="@dimen/rate_dialog_zero_dp"
        android:paddingRight="@dimen/rate_dialog_zero_dp"
        android:background="@color/rateDialogColorTransparent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rate_dialog_layout_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/rate_dialog_zero_dp"
            android:layout_marginLeft="@dimen/rate_dialog_zero_dp"
            android:layout_marginTop="@dimen/rate_dialog_zero_dp"
            android:layout_marginBottom="@dimen/rate_dialog_zero_dp"
            android:layout_marginRight="@dimen/rate_dialog_zero_dp"
            android:layout_marginEnd="@dimen/rate_dialog_zero_dp"
            android:paddingLeft="@dimen/rate_dialog_zero_dp"
            android:paddingTop="@dimen/rate_dialog_ten_dp"
            android:paddingBottom="@dimen/rate_dialog_ten_dp"
            android:paddingRight="@dimen/rate_dialog_zero_dp"
            android:background="@drawable/rate_dialog_rectangle_rounded_top"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rate_dialog_icon"
                android:layout_width="@dimen/rate_dialog_icon_dimensions"
                android:layout_height="@dimen/rate_dialog_icon_dimensions"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/rate_dialog_zero_dp"
                android:layout_marginLeft="@dimen/rate_dialog_zero_dp"
                android:layout_marginTop="@dimen/rate_dialog_zero_dp"
                android:layout_marginBottom="@dimen/rate_dialog_zero_dp"
                android:layout_marginRight="@dimen/rate_dialog_zero_dp"
                android:layout_marginEnd="@dimen/rate_dialog_zero_dp"
                android:paddingLeft="@dimen/rate_dialog_zero_dp"
                android:paddingTop="@dimen/rate_dialog_zero_dp"
                android:paddingBottom="@dimen/rate_dialog_zero_dp"
                android:paddingRight="@dimen/rate_dialog_zero_dp"
                android:background="@color/rateDialogColorTransparent"
                android:contentDescription="@string/rate_dialog_ic_launcher_description"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/rate_dialog_text_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/rate_dialog_zero_dp"
                android:layout_marginLeft="@dimen/rate_dialog_zero_dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="@dimen/rate_dialog_zero_dp"
                android:layout_marginRight="@dimen/rate_dialog_zero_dp"
                android:layout_marginEnd="@dimen/rate_dialog_zero_dp"
                android:paddingLeft="@dimen/rate_dialog_zero_dp"
                android:paddingTop="@dimen/rate_dialog_zero_dp"
                android:paddingBottom="@dimen/rate_dialog_zero_dp"
                android:paddingRight="@dimen/rate_dialog_zero_dp"
                android:background="@color/rateDialogColorTransparent"
                android:gravity="center"
                android:text="@string/rater_title"
                android:textColor="@color/rateDialogColorBlack"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rate_dialog_text_dialog_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/rate_dialog_zero_dp"
                android:layout_marginLeft="@dimen/rate_dialog_zero_dp"
                android:layout_marginTop="@dimen/rate_dialog_zero_dp"
                android:layout_marginBottom="@dimen/rate_dialog_zero_dp"
                android:layout_marginRight="@dimen/rate_dialog_zero_dp"
                android:layout_marginEnd="@dimen/rate_dialog_zero_dp"
                android:paddingLeft="@dimen/rate_dialog_twenty_dp"
                android:paddingTop="@dimen/rate_dialog_zero_dp"
                android:paddingBottom="@dimen/rate_dialog_zero_dp"
                android:paddingRight="@dimen/rate_dialog_twenty_dp"
                android:background="@color/rateDialogColorTransparent"
                android:gravity="center"
                android:text="@string/rater_message"
                android:textColor="@color/rateDialogColorBlack"
                android:textSize="16sp"
                android:textStyle="normal" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/rate_dialog_layout_rating_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rate_dialog_layout_head"
            android:layout_marginStart="@dimen/rate_dialog_zero_dp"
            android:layout_marginLeft="@dimen/rate_dialog_zero_dp"
            android:layout_marginTop="@dimen/rate_dialog_one_dp"
            android:layout_marginBottom="@dimen/rate_dialog_zero_dp"
            android:layout_marginRight="@dimen/rate_dialog_zero_dp"
            android:layout_marginEnd="@dimen/rate_dialog_zero_dp"
            android:paddingLeft="@dimen/rate_dialog_zero_dp"
            android:paddingTop="@dimen/rate_dialog_zero_dp"
            android:paddingBottom="@dimen/rate_dialog_zero_dp"
            android:paddingRight="@dimen/rate_dialog_zero_dp"
            android:background="@drawable/rate_dialog_rectangle">

            <RatingBar
                android:id="@+id/rate_dialog_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/rate_dialog_zero_dp"
                android:layout_marginLeft="@dimen/rate_dialog_zero_dp"
                android:layout_marginTop="@dimen/rate_dialog_zero_dp"
                android:layout_marginBottom="@dimen/rate_dialog_zero_dp"
                android:layout_marginRight="@dimen/rate_dialog_zero_dp"
                android:layout_marginEnd="@dimen/rate_dialog_zero_dp"
                android:paddingLeft="@dimen/rate_dialog_zero_dp"
                android:paddingTop="7dp"
                android:paddingBottom="@dimen/rate_dialog_zero_dp"
                android:paddingRight="@dimen/rate_dialog_zero_dp"
                android:background="@color/rateDialogColorTransparent"
                android:clickable="true"
                android:focusable="true"
                android:isIndicator="false"
                android:numStars="5"
                android:progressDrawable="@drawable/rate_dialog_rating_bar_apple_type"
                android:rating="0"
                android:stepSize="1" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/rate_dialog_layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rate_dialog_layout_rating_bar"
            android:layout_marginStart="@dimen/rate_dialog_zero_dp"
            android:layout_marginLeft="@dimen/rate_dialog_zero_dp"
            android:layout_marginTop="@dimen/rate_dialog_one_dp"
            android:layout_marginBottom="@dimen/rate_dialog_zero_dp"
            android:layout_marginRight="@dimen/rate_dialog_zero_dp"
            android:layout_marginEnd="@dimen/rate_dialog_zero_dp"
            android:paddingLeft="@dimen/rate_dialog_zero_dp"
            android:paddingTop="@dimen/rate_dialog_zero_dp"
            android:paddingBottom="@dimen/rate_dialog_zero_dp"
            android:paddingRight="@dimen/rate_dialog_zero_dp"
            android:animateLayoutChanges="true"
            android:background="@color/rateDialogColorTransparent"
            android:orientation="horizontal"
            tools:ignore="UnusedAttribute">

            <Button
                android:id="@+id/rate_dialog_button_negative"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/rate_dialog_zero_dp"
                android:layout_marginLeft="@dimen/rate_dialog_zero_dp"
                android:layout_marginTop="@dimen/rate_dialog_zero_dp"
                android:layout_marginBottom="@dimen/rate_dialog_zero_dp"
                android:layout_marginRight="@dimen/rate_dialog_one_dp"
                android:layout_marginEnd="@dimen/rate_dialog_one_dp"
                android:paddingLeft="@dimen/rate_dialog_zero_dp"
                android:paddingTop="@dimen/rate_dialog_zero_dp"
                android:paddingBottom="@dimen/rate_dialog_zero_dp"
                android:paddingRight="@dimen/rate_dialog_zero_dp"
                android:background="@drawable/rate_dialog_rectangle_rounded_bottom_left_corner"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/rater_never"
                android:textAllCaps="false"
                android:textColor="@color/rateDialogColorApplePrimary"
                android:textSize="20sp"
                android:textStyle="normal"
                android:visibility="gone" />

            <Button
                android:id="@+id/rate_dialog_button_neutral"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/rate_dialog_zero_dp"
                android:layout_marginLeft="@dimen/rate_dialog_zero_dp"
                android:layout_marginTop="@dimen/rate_dialog_zero_dp"
                android:layout_marginEnd="@dimen/rate_dialog_zero_dp"
                android:layout_marginRight="@dimen/rate_dialog_zero_dp"
                android:layout_marginBottom="@dimen/rate_dialog_zero_dp"
                android:paddingLeft="@dimen/rate_dialog_zero_dp"
                android:paddingTop="@dimen/rate_dialog_zero_dp"
                android:paddingRight="@dimen/rate_dialog_zero_dp"
                android:paddingBottom="@dimen/rate_dialog_zero_dp"
                android:background="@drawable/rate_dialog_rectangle_rounded_bottom"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/rater_not_now"
                android:textAllCaps="false"
                android:textColor="@color/rateDialogColorApplePrimary"
                android:textSize="20sp"
                android:textStyle="normal"
                android:visibility="visible" />

            <Button
                android:id="@+id/rate_dialog_button_positive"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/rate_dialog_zero_dp"
                android:layout_marginLeft="@dimen/rate_dialog_zero_dp"
                android:layout_marginTop="@dimen/rate_dialog_zero_dp"
                android:layout_marginBottom="@dimen/rate_dialog_zero_dp"
                android:layout_marginRight="@dimen/rate_dialog_zero_dp"
                android:layout_marginEnd="@dimen/rate_dialog_zero_dp"
                android:paddingLeft="@dimen/rate_dialog_zero_dp"
                android:paddingTop="@dimen/rate_dialog_zero_dp"
                android:paddingBottom="@dimen/rate_dialog_zero_dp"
                android:paddingRight="@dimen/rate_dialog_zero_dp"
                android:background="@drawable/rate_dialog_rectangle_rounded_bottom_right_corner"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/rater_rate_now"
                android:textAllCaps="false"
                android:textColor="@color/rateDialogColorApplePrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>